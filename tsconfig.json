{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "sourceMap": true,
    "lib": ["ES2020"],

    "strictPropertyInitialization": false,
    "outDir": "out",
    "rootDir": "src",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./server" }]
}
