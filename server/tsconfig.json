{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "out",
    "rootDir": "src",

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
